<div class="row justify-content-center mt-3">
  <div class="col col-md-4 mb-5">
    <h2><%= t('.title') %></h2>

    <div class="card border-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <div class="field mb-3">
              <%= f.label :first_name, t('.first_name') %>
              <%= f.text_field :first_name, autofocus: true, class: 'form-control', autocomplete: "first-name" %>
            </div>

            <div class="field mb-3">
              <%= f.label :last_name, t('.last_name') %>
              <%= f.text_field :last_name, autofocus: true, class: 'form-control', autocomplete: "last-name" %>
            </div>

            <div class="field mb-3">
              <%= f.label :email, t('.email') %>
              <%= f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "email" %>
            </div>

            <div class="field mb-3">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <em><%= I18n.t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
              <% end %>
              <%= f.password_field :password, class: 'form-control password-matching', autocomplete: "new-password" %>
            </div>

            <div class="field mb-3" style="position: relative">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: 'form-control password-matching', autocomplete: "new-password" %>
              <%= octicon 'issue-opened', class: 'issue-icon text-danger hide', height: 22 %>
              <%= octicon 'issue-closed', class: 'issue-icon text-success hide', height: 22 %>
            </div>

            <div class="actions">
              <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
            </div>
            <% end %>
          </div>
      </div>
    </div>
    <div class="mt-1">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>