<h4 class="text-info my-3"><%= t('.header', id: @test.id) %></h4>

<p>
  <strong><%= t('.title') %></strong>
  <span><%= @test.title %></span>
</p>
<p>
  <strong><%= t('.level') %></strong>
  <span><%= @test.level %></span>
</p>
<p>
  <strong><%= t('.category') %></strong>
  <span><%= @test.category.title %></span>
</p>

<p><strong><%= t('.questions_title') %></strong></p>

<%= link_to t('.add_question'), new_admin_test_question_path(@test.id),  :class=>'btn btn-secondary' %>

<% if @test.questions.present? %>

  <table class="table table-striped my-3">
    <thead>
    <tr class="text-center">
      <th style="width: 50px"><%= t('.id_column') %></th>
      <th><%= t('.question_column') %></th>
      <th colspan="3"><%= t('.actions_column') %></th>
    </tr>
    </thead>
    <tbody>
      <%= render @test.questions %>
      <%#= render partial: 'questions/question', collection: @test.questions %>
    </tbody>
  </table>
<% else %>
  <p class="text-danger py-2"><%= t('.no_questions') %></p>
<% end %>

<p class="py-3">
  <%= link_to t('.edit_link'), edit_admin_test_path(@test) %> |
  <%= link_to t('.back_link'), admin_tests_path %>
</p>
