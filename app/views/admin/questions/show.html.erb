<h4 class="text-info my-3"><%= t('.show_header', id: @question.id) %></h4>
<p>
  <%= @question.body %>
</p>

<h5 class="text-secondary my-3"><%= t('.answers_title') %></h5>
<%= button_to t('.new_answer_link'), new_admin_question_answer_path(@question), :class=>'btn btn-secondary' %>

<div class="row my-3">
  <ol class="col-6 ml-3">
    <%= render @question.answers %>
  </ol>
</div>

<p>
  <%= link_to t('.edit_link'), edit_admin_question_path(@question) %>
  <%= link_to t('.back_link'), admin_test_path(@question.test_id) %>
</p>